<Crew_Screen>:
    name: 'crew'
    FloatLayout:
        Image:
            id: Crew_background
            source: f'{root.mimic_directory}/Mimic/Pi/imgs/crew/Crewbackground.png'
            fit_mode: "fill"
        Label:
            id: ISS_crewed_years
            pos_hint: {"center_x": 0.715, "center_y": 0.91}
            text: '22'
            markup: True
            color: 1,1,1
            font_size: self.height * 0.09
            size_hint_y: 0.4
        Label:
            id: ISS_crewed_months
            pos_hint: {"center_x": 0.80, "center_y": 0.91}
            text: '6'
            markup: True
            color: 1,1,1
            font_size: self.height * 0.09
            size_hint_y: 0.4
        Label:
            id: ISS_crewed_days
            pos_hint: {"center_x": 0.90, "center_y": 0.91}
            text: '25'
            markup: True
            color: 1,1,1
            font_size: self.height * 0.09
            size_hint_y: 0.4
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/signalred.zip"
            size_hint_y: 0.112
            anim_delay: 0.05
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1,1,1
            font_size: self.height * 0.3
            size_hint_y: 0.5
        Button:
            size_hint: 0.1,0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: app.root.current = 'mimic'


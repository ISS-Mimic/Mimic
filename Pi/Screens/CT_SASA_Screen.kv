<CT_SASA_Screen>:
    name: 'ct_sasa'
    FloatLayout:
        # Background image
        Image:
            id: SASA_Background
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/SASAbase.png"
            fit_mode: "fill"
        
        # Main SASA image
        Image:
            id: SASA
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/SASA.png"
            size_hint_y: 0.8
            fit_mode: "contain"
            pos_hint: {"center_x": 0.38, "center_y": 0.5}
        
        # Telemetry Labels - Right side panel
        # Active String
        Label:
            id: ActiveString_label
            pos_hint: {"center_x": 0.7, "center_y": 0.78}
            text: 'Active String:'
            markup: True
            color: 1, 1, 1
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(28))
        
        Label:
            id: ActiveString
            pos_hint: {"center_x": 0.9, "center_y": 0.78}
            text: '0'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(28))
        
        # RFG1 (SASA 1) Status
        Label:
            id: RFG1status_label
            pos_hint: {"center_x": 0.7, "center_y": 0.71}
            text: 'RFG1 Status:'
            markup: True
            color: 1, 1, 1
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(28))
        
        Label:
            id: RFG1status
            pos_hint: {"center_x": 0.9, "center_y": 0.71}
            text: 'n/a'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(28))
        
        # RFG1 Azimuth
        Label:
            id: RFG1azimuth_label
            pos_hint: {"center_x": 0.7, "center_y": 0.65}
            text: 'RFG1 Azimuth (deg):'
            markup: True
            color: 1, 1, 1
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(28))
        
        Label:
            id: RFG1azimuth
            pos_hint: {"center_x": 0.9, "center_y": 0.65}
            text: '0.00'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(28))
        
        # RFG1 Elevation
        Label:
            id: RFG1elev_label
            pos_hint: {"center_x": 0.7, "center_y": 0.59}
            text: 'RFG1 Elevation (deg):'
            markup: True
            color: 1, 1, 1
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(28))
        
        Label:
            id: RFG1elev
            pos_hint: {"center_x": 0.9, "center_y": 0.59}
            text: '0.00'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(28))
        
        # RFG2 (SASA 2) Status
        Label:
            id: RFG2status_label
            pos_hint: {"center_x": 0.7, "center_y": 0.53}
            text: 'RFG2 Status:'
            markup: True
            color: 1, 1, 1
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(28))
        
        Label:
            id: RFG2status
            pos_hint: {"center_x": 0.9, "center_y": 0.53}
            text: 'n/a'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: self.height * 0.10
        
        # RFG2 Azimuth
        Label:
            id: RFG2azimuth_label
            pos_hint: {"center_x": 0.7, "center_y": 0.47}
            text: 'RFG2 Azimuth (deg):'
            markup: True
            color: 1, 1, 1
            size_hint_y: 0.4
            font_size: self.height * 0.10
        
        Label:
            id: RFG2azimuth
            pos_hint: {"center_x": 0.9, "center_y": 0.47}
            text: '0.00'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: self.height * 0.10
        
        # RFG2 Elevation
        Label:
            id: RFG2elev_label
            pos_hint: {"center_x": 0.7, "center_y": 0.41}
            text: 'RFG2 Elevation (deg):'
            markup: True
            color: 1, 1, 1
            size_hint_y: 0.4
            font_size: self.height * 0.10
        
        Label:
            id: RFG2elev
            pos_hint: {"center_x": 0.9, "center_y": 0.41}
            text: '0.00'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: self.height * 0.10
        
        # Back button
        Button:
            size_hint: 0.1, 0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: app.root.current = 'ct'
        
        # Signal status indicator
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        
        # Arduino status indicator
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            fit_mode: "scale-down"
        
        # Arduino count label
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1, 1, 1
            font_size: self.height * 0.3
            size_hint_y: 0.5

<Orbit_Pass>:
    name: 'orbit_pass'
    FloatLayout:
        Image:
            id: Orbit_Pass_background
            source: '/home/pi/Mimic/Pi/imgs/orbit/ISSpassBackground.png'
            fit_mode: "fill" 
        #Label:
            #id: passtime
            #pos_hint: {"center_x": 0.5, "center_y": 0.5}
            #text: "Pass"
        Image:
            id: signal
            source: "/home/pi/Mimic/Pi/imgs/signal/signalred.zip"
            size_hint_y: 0.112
            anim_delay: 0.05
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        Image:
            id: arduino
            source: "/home/pi/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1,1,1
            font_size: self.height * 0.3
            size_hint_y: 0.5
        Button:
            size_hint: 0.1,0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: '/home/pi/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: app.root.current = 'orbit'

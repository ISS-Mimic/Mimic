<Settings_Screen>:
    name: 'settings'
    FloatLayout:
        orientation: 'vertical'
        Image:
            source: f'{root.mimic_directory}/Mimic/Pi/imgs/SettingsBackground.png'
            fit_mode: "fill"
        
        # Title
        Label:
            text: 'Location Settings'
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            bold: True
            size_hint_y: 0.1
            font_size: min(self.height * 0.4, dp(48))
            color: 1, 1, 1, 1
        
        # Current Location Display
        Label:
            id: current_location_label
            text: 'Current: 29.7604, -95.3698'
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            size_hint_y: 0.05
            font_size: min(self.height * 0.25, dp(24))
            color: 0, 1, 0, 1
        
        # Manual Input Section
        Label:
            text: 'Enter Coordinates:'
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            size_hint_y: 0.05
            font_size: min(self.height * 0.2, dp(20))
            color: 1, 1, 1, 1
        
        Label:
            text: 'Latitude:'
            pos_hint: {"center_x": 0.25, "center_y": 0.5}
            size_hint_y: 0.05
            font_size: min(self.height * 0.18, dp(18))
            color: 1, 1, 1, 1
        
        TextInput:
            id: lat_input
            text: '29.7604'
            pos_hint: {"center_x": 0.35, "center_y": 0.5}
            size_hint: 0.1, 0.05
            font_size: min(dp(16), self.parent.width * 0.012)
            multiline: False
            input_filter: 'float'
        
        Label:
            text: 'Longitude:'
            pos_hint: {"center_x": 0.55, "center_y": 0.5}
            size_hint_y: 0.05
            font_size: min(self.height * 0.18, dp(18))
            color: 1, 1, 1, 1
        
        TextInput:
            id: lon_input
            text: '-95.3698'
            pos_hint: {"center_x": 0.65, "center_y": 0.5}
            size_hint: 0.1, 0.05
            font_size: min(dp(16), self.parent.width * 0.012)
            multiline: False
            input_filter: 'float'
        
        Button:
            text: 'Set Manual Location'
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            size_hint: 0.15, 0.05
            on_release: root.set_location_from_coordinates(lat_input.text, lon_input.text)
            background_color: 0.2, 1, 0.2, 1
            font_size: min(dp(16), self.parent.width * 0.012)
        
        # Auto-detect Button
        Button:
            text: 'Auto-detect from IP'
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            size_hint: 0.2, 0.06
            on_release: root.detect_location_from_ip()
            background_color: 1, 0.5, 0, 1
            font_size: min(dp(16), self.parent.width * 0.012)
        
        # Smartflip Checkbox (moved to better position)
        CheckBox:
            id: smartflip
            pos_hint: {"center_x": 0.2, "center_y": 0.2}
            size_hint_y: 0.05
            on_active: root.checkbox_clicked(self, self.active)
        
        Label:
            text: "Smartflip (smooth 0 crossing)"
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            size_hint_y: 0.05
            font_size: min(self.height * 0.15, dp(16))
            color: 1, 1, 1, 1
        
        # Back Button
        Button:
            size_hint: 0.1, 0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: app.root.current = 'main'
        
        # Status Icons
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/signalred.zip"
            size_hint_y: 0.112
            anim_delay: 0.05
            anim_loop: 0
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
            fit_mode: "scale-down"
        
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            fit_mode: "scale-down"
        
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1, 1, 1
            font_size: min(self.height * 0.3, dp(40))
            size_hint_y: 0.5

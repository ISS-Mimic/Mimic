<Settings_Screen>:
    name: 'settings'
    FloatLayout:
        orientation: 'vertical'
        Image:
            source: '/home/pi/Mimic/Pi/imgs/SettingsBackground.png'
            fit_mode: "fill"
        Label:
            text: ''
            pos_hint: {"center_x": 0.5,"center_y":0.8}
            bold: True
            size_hint_y: 0.2
            font_size: self.height * 0.5
            markup: True
            color: 1,0,1
        CheckBox:
            id: smartflip
            pos_hint: {"center_x": 0.1,"center_y": 0.5}
            size_hint_y: 0.2
            on_active: root.checkbox_clicked(self,self.active)
        Label:
            text: "Smartflip (check to enable smooth 0 crossing)"
            pos_hint: {"center_x": 0.35,"center_y":0.5}
            size_hint_y: 0.4   
            font_size: self.height * 0.13
        TextInput:
            id: lat_input1
            pos_hint: {'center_x': 0.2, 'y': 0.4}
            size_hint: (0.1, 0.06)
            cursor_blink: True
            font_size: 15
            multiline: False
        TextInput:
            id: lat_input2
            pos_hint: {'center_x': 0.4, 'y': 0.4}
            size_hint: (0.1, 0.06)
            cursor_blink: True
            font_size: 15
            multiline: False
        Button:
            size_hint: 0.1,0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: '/home/pi/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: app.root.current = 'main'

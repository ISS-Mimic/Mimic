            size_hint: (None, None)
            size: (50,50)
            color: (0,1,1,1)
            canvas:
                PushMatrix:
                Translate:
                    xy: (OrbitMap.x + (OrbitMap.width - OrbitMap.norm_image_size[0])/2, OrbitMap.y + (OrbitMap.height - OrbitMap.norm_image_size[1])/2)

            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(28))
        Label:
            id: NH3outletTemp_loopB
            pos_hint: {"center_x": 0.89, "center_y": 0.66}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(28))
        Label:
            id: ptrrj_value
            pos_hint: {"center_x": 0.45, "center_y": 0.25}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(32))
        Label:
            id: strrj_value
            pos_hint: {"center_x": 0.9, "center_y": 0.25}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(32))
        Button:
            size_hint: 0.1, 0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            background_down: self.background_normal.replace('BackButton.png', 'BackButton_Down.png') if self.background_normal else ''
            on_release: app.root.current = 'mimic'
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            fit_mode: "scale-down"
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1, 1, 1, 1
            font_size: min(self.height * 0.3, dp(40))
            size_hint_y: 0.5

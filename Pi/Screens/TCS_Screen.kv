#:import dp kivy.metrics.dp

<TCS_Screen>:
    name: 'tcs'
    FloatLayout:
        Image:
            id: TCS_Background
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/tcs/TCSbackground.png"
            fit_mode: "fill"
        Label:
            id: SWmode_loopA
            pos_hint: {"center_x": 0.74, "center_y": 0.78}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(28))
        Label:
            id: SWmode_loopB
            pos_hint: {"center_x": 0.89, "center_y": 0.78}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(28))
        Label:
            id: NH3flow_loopA
            pos_hint: {"center_x": 0.74, "center_y": 0.74}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(28))
        Label:
            id: NH3flow_loopB
            pos_hint: {"center_x": 0.89, "center_y": 0.74}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(28))
        Label:
            id: NH3outletPress_loopA
            pos_hint: {"center_x": 0.74, "center_y": 0.70}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(28))
        Label:
            id: NH3outletPress_loopB
            pos_hint: {"center_x": 0.89, "center_y": 0.70}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(28))
        Label:
            id: NH3outletTemp_loopA
            pos_hint: {"center_x": 0.74, "center_y": 0.66}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(28))
        Label:
            id: NH3outletTemp_loopB
            pos_hint: {"center_x": 0.89, "center_y": 0.66}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(28))
        Label:
            id: ptrrj_value
            pos_hint: {"center_x": 0.45, "center_y": 0.25}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(32))
        Label:
            id: strrj_value
            pos_hint: {"center_x": 0.9, "center_y": 0.25}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(32))

       # ---------- STATUS DISPLAY (Bottom Rectangle) ----------
        Label:
            id: status_label
            text: ''
            size_hint: 1, 0.07
            background_color: 0, 0, 0, 0.8  # Semi-transparent black
            color: 0, 1, 0, 1  # Green text
            font_size: self.height * 0.6  # Scale font to label height
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            pos_hint: {"center_x": 0.57, "center_y": 0.07}
        
        # ---------- BOTTOM TOOLBAR ----------
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/signalred.zip"
            size_hint_y: 0.112
            anim_delay: 0.05
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: -1
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
        
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1, 1, 1, 1
            font_size: self.height * 1
            size_hint: 0.06, 0.08
        
        # ─────────────────────── Navigation ────────────────────────────────

        Button:
            size_hint: 0.1, 0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.07}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            background_down: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            border: 0,0,0,0    # avoid 9-slice margins
            on_release: app.root.current = 'mimic'
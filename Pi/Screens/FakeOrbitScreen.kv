<FakeOrbitScreen>:
    name: 'fakeorbit'
    FloatLayout:
        orientation: 'vertical'
        Image:
            source: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/SimulatedOrbitBackground.png'
            fit_mode: "fill"
        Label:
            id: fakeorbitstatus
            text: ''
            size_hint_y: 0.4
            font_size: self.height * 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            markup: True
            color: 1,1,1
        Button:
            id: popupbutton
            size_hint: 0.01,0.02
            pos_hint: {"center_x": 0.4, "center_y": 0.8}
            text: 'i'
            font_size: 10
            ##background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/InfoIcon.png'
            on_release: root.HTVpopup()
        Button:
            id: Disco
            size_hint: 0.14,0.115
            text: "Disco!"
            font_size: dp(30)
            pos_hint: {"center_x": 0.807, "center_y": 0.551}
            on_release: fakeorbitstatus.text = 'Transmitting Disco Orbit'
            on_release: root.changeDemoBoolean(True)
            on_release: root.startDisco()
        Button:
            id: DemoStart
            size_hint: 0.14,0.115
            pos_hint: {"center_x": 0.15, "center_y": 0.54}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StartUnlit.png'
            background_down: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StartDown.png'
            on_release: DemoStop.disabled = False
            on_release: fakeorbitstatus.text = 'Transmitting Demo Orbit'
            on_release: root.changeDemoBoolean(True)
            on_release: self.disabled = True
            on_release: root.startDemo()
        Button:
            id: DemoStop
            size_hint: 0.14,0.115
            pos_hint: {"center_x": 0.15, "center_y": 0.40}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StopUnlit.png'
            background_down: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StopDown.png'
            disabled: True
            on_release: DemoStart.disabled = False
            on_release: fakeorbitstatus.text = 'Stopped'
            on_release: root.changeDemoBoolean(False)
            on_release: self.disabled = True
            on_release: root.stopDemo()
        Button:
            id: HTVDemoStart
            size_hint: 0.14,0.115
            pos_hint: {"center_x": 0.38, "center_y": 0.54}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StartUnlit.png'
            background_down: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StartDown.png'
            on_release: HTVDemoStop.disabled = False
            on_release: fakeorbitstatus.text = 'Transmitting HTV Demo Orbit'
            on_release: root.changeDemoBoolean(True)
            on_release: self.disabled = True
            on_release: root.startHTVDemo()
        Button:
            id: HTVDemoStop
            size_hint: 0.14,0.115
            pos_hint: {"center_x": 0.38, "center_y": 0.40}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StopUnlit.png'
            background_down: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StopDown.png'
            disabled: True
            on_release: HTVDemoStart.disabled = False
            on_release: fakeorbitstatus.text = 'Stopped'
            on_release: root.changeDemoBoolean(False)
            on_release: self.disabled = True
        Button:
            id: OFT2DemoStart
            size_hint: 0.14,0.115
            pos_hint: {"center_x": 0.15, "center_y": 0.54}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StartUnlit.png'
            background_down: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StartDown.png'
            on_release: OFT2DemoStop.disabled = False
            on_release: fakeorbitstatus.text = 'Transmitting OFT2 Demo'
            on_release: root.changeDemoBoolean(True)
            on_release: self.disabled = True
            on_release: root.startOFT2Demo()
        Button:
            id: OFT2DemoStop
            size_hint: 0.14,0.115
            pos_hint: {"center_x": 0.15, "center_y": 0.40}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StopUnlit.png'
            background_down: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StopDown.png'
            disabled: True
            on_release: OFT2DemoStart.disabled = False
            on_release: fakeorbitstatus.text = 'Stopped'
            on_release: root.changeDemoBoolean(False)
            on_release: self.disabled = True
        Button:
            id: LoadDemoStart
            disabled: True
            size_hint: 0.14,0.115
            pos_hint: {"center_x": 0.615, "center_y": 0.54}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StartUnlit.png'
            background_down: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StartDown.png'
            on_release: LoadDemoStop.disabled = False
            on_release: fakeorbitstatus.text = 'Sending Demo'
            on_release: root.changeDemoBoolean(True)
            on_release: self.disabled = True
            on_release: root.startLoadDemo()
        Button:
            id: LoadDemoStop
            size_hint: 0.14,0.115
            pos_hint: {"center_x": 0.615, "center_y": 0.40}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StopUnlit.png'
            background_down: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StopDown.png'
            disabled: True
            on_release: LoadDemoStart.disabled = False
            on_release: fakeorbitstatus.text = 'Stopped'
            on_release: root.changeDemoBoolean(False)
            on_release: self.disabled = True
        Button:
            id: OFT2loop
            text: 'OFT2 Loop'
            size_hint: 0.1,0.1
            font_size: dp(20)
            pos_hint: {"center_x": 0.15, "center_y": 0.23}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StopUnlit.png'
            background_down: f'{root.mimic_directory}/Mimic/Pi/imgs/fakeorbit/StopDown.png'
            disabled: True
            on_release: fakeorbitstatus.text = 'Looping'
            on_release: root.changeDemoBoolean(False)
            on_release: self.disabled = True
        Button:
            size_hint: 0.1,0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: DemoStart.disabled = False
            on_release: DemoStop.disabled = True
            on_release: root.changeDemoBoolean(False)
            on_release: root.stopDemo()
            on_release: root.manager.current = 'main'
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
            fit_mode: "scale-down"
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            fit_mode: "scale-down"
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1,1,1
            font_size: self.height * 0.3
            size_hint_y: 0.5

#:import dp kivy.metrics.dp

<EVA_EMU_Screen>:
    name: 'eva_emu'
    FloatLayout:
        Image:
            id: EVA_EMU_Background
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/eva/EMUbackground.png"
            fit_mode: "contain"
        Label:
            id: UIApowerEMU1
            pos_hint: {"center_x": 0.6, "center_y": 0.77}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.3
            font_size: min(self.height * 0.10, dp(28))
        Label:
            id: UIApowerEMU2
            pos_hint: {"center_x": 0.69, "center_y": 0.77}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.3
            font_size: min(self.height * 0.10, dp(28))
        Label:
            id: UIAcurrentEMU1
            pos_hint: {"center_x": 0.6, "center_y": 0.74}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.3
            font_size: min(self.height * 0.10, dp(28))
        Label:
            id: UIAcurrentEMU2
            pos_hint: {"center_x": 0.69, "center_y": 0.74}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.3
            font_size: min(self.height * 0.10, dp(28))
        Label:
            id: PSApowerEMU1
            pos_hint: {"center_x": 0.81, "center_y": 0.77}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.3
            font_size: min(self.height * 0.10, dp(28))
        Label:
            id: PSApowerEMU2
            pos_hint: {"center_x": 0.9, "center_y": 0.77}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.3
            font_size: min(self.height * 0.10, dp(28))
        Label:
            id: PSAcurrentEMU1
            pos_hint: {"center_x": 0.81, "center_y": 0.74}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.3
            font_size: min(self.height * 0.10, dp(28))
        Label:
            id: PSAcurrentEMU2
            pos_hint: {"center_x": 0.9, "center_y": 0.74}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.3
            font_size: min(self.height * 0.10, dp(28))
        Label:
            id: IRUvoltage
            pos_hint: {"center_x": 0.15, "center_y": 0.2}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.3
            font_size: min(self.height * 0.10, dp(28))
        Label:
            id: IRUcurrent
            pos_hint: {"center_x": 0.15, "center_y": 0.17}
            text: '0.03'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.3
            font_size: min(self.height * 0.10, dp(28))
        Button:
            size_hint: 0.1,0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: app.root.current = 'eva_main'
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            fit_mode: "scale-down"
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1,1,1
            font_size: self.height * 0.3
            size_hint_y: 0.5

            color: 1,1,1,0.2
            size_hint: 0.15,0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            angle: 0
            angle2: 180
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0,0,-1
                    ##origin: sgant_dish.center

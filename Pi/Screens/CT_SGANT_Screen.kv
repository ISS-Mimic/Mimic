                    origin: self.center
            canvas.after:
                PopMatrix
        Image:
            id: tdrs_z7
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/TDRS.png"
            color: 1,1,1,0.2
            size_hint: 0.15,0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            angle: 0
            angle2: 180
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0,0,-1
                    ##origin: sgant_dish.center
                    origin: 400,0
                Rotate:
                    angle: self.angle2
                    axis: 0,0,1
                    origin: self.center
            canvas.after:
                PopMatrix
        Label:
            id: tdrs_label
            ##pos: tdrs.pos
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
            text: '---'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: self.height * 0.12
        Button:
            size_hint: 0.1,0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: app.root.current = 'ct'
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            fit_mode: "scale-down"
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1,1,1
            font_size: self.height * 0.3
            size_hint_y: 0.5

<CT_SGANT_Screen>:
    name: 'ct_sgant'
    FloatLayout:
        # Background image
        Image:
            id: SGANT_background
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/SGANTbackground.png"
            fit_mode: "fill"
        
        # Signal pulse indicator
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        
        # SGANT Elevation Label
        Label:
            id: sgant_elevation_label
            pos_hint: {"center_x": 0.4, "center_y": 0.2}
            text: 'Ku-Band SGANT Elevation'
            markup: True
            color: 1, 1, 1
            size_hint_y: 0.4
            font_size: min(self.height * 0.14, dp(40))
        
        # SGANT Elevation Value
        Label:
            id: sgant_elevation
            pos_hint: {"center_x": 0.65, "center_y": 0.2}
            text: '0.00'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(28))
        
        # SGANT Transmit Status
        Label:
            id: sgant_transmit
            pos_hint: {"center_x": 0.75, "center_y": 0.2}
            text: 'n/a'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(28))
        
        # Main SGANT Dish (rotates based on elevation)
        Image:
            id: sgant_dish
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/SGANTantenna.png"
            color: 1, 1, 1, 1
            size_hint: 0.4, 0.4
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.5, "center_y": 0.35}
            angle: 0
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0, 0, 1
                    origin: self.center
            canvas.after:
                PopMatrix
        
        # Radio Up Indicator (changes color based on transmit status)
        Image:
            id: radio_up
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/Radio.zip"
            anim_delay: 0.03
            anim_loop: 0
            color: 1, 1, 1, 1
            size_hint: 2, 0.4
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            angle: sgant_dish.angle
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0, 0, 1
                    origin: sgant_dish.center
            canvas.after:
                PopMatrix
        
        # SGANT Base
        Image:
            id: sgant_base
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/SGANTbase.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            size_hint: 0.15, 0.15
            fit_mode: "scale-down"
        
        # TDRS East 12 Satellite
        Image:
            id: tdrs_east12
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/TDRS.png"
            color: 1, 1, 1, 1
            size_hint: 0.15, 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            angle: 0
            angle2: 180
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0, 0, -1
                    origin: 400, 0
                Rotate:
                    angle: self.angle2
                    axis: 0, 0, 1
                    origin: self.center
            canvas.after:
                PopMatrix
        
        # TDRS East 6 Satellite
        Image:
            id: tdrs_east6
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/TDRS.png"
            color: 1, 1, 1, 1
            size_hint: 0.15, 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            angle: 0
            angle2: 180
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0, 0, -1
                    origin: 400, 0
                Rotate:
                    angle: self.angle2
                    axis: 0, 0, 1
                    origin: self.center
            canvas.after:
                PopMatrix
        
        # TDRS West 10 Satellite
        Image:
            id: tdrs_west10
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/TDRS.png"
            color: 1, 1, 1, 1
            size_hint: 0.15, 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            angle: 0
            angle2: 180
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0, 0, -1
                    origin: 400, 0
                Rotate:
                    angle: self.angle2
                    axis: 0, 0, 1
                    origin: self.center
            canvas.after:
                PopMatrix
        
        # TDRS West 11 Satellite
        Image:
            id: tdrs_west11
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/TDRS.png"
            color: 1, 1, 1, 1
            size_hint: 0.15, 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            angle: 0
            angle2: 180
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0, 0, -1
                    origin: 400, 0
                Rotate:
                    angle: self.angle2
                    axis: 0, 0, 1
                    origin: self.center
            canvas.after:
                PopMatrix
        
        # TDRS Z7 Satellite (Zenith)
        Image:
            id: tdrs_z7
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/TDRS.png"
            color: 1, 1, 1, 0.2
            size_hint: 0.15, 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            angle: 0
            angle2: 180
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0, 0, -1
                    origin: 400, 0
                Rotate:
                    angle: self.angle2
                    axis: 0, 0, 1
                    origin: self.center
            canvas.after:
                PopMatrix
        
        # TDRS Status Label
        Label:
            id: tdrs_label
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
            text: '---'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.12, dp(34))
        
        # Back Button
        Button:
            size_hint: 0.1, 0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: app.root.current = 'ct'
        
        # Arduino Status Indicator
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            fit_mode: "scale-down"
        
        # Arduino Count Display
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1, 1, 1
            font_size: min(self.height * 0.3, dp(85))
            size_hint_y: 0.5

#:import dp kivy.metrics.dp

<CT_SGANT_Screen>:
    name: 'ct_sgant'
    FloatLayout:
        Image:
            id: SGANT_background
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/SGANTbackground.png"
            fit_mode: "fill"
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        Label:
            id: sgant_elevation_label
            pos_hint: {"center_x": 0.4, "center_y": 0.2}
            text: 'Ku-Band SGANT Elevation'
            markup: True
            color: 1,1,1
            size_hint: 0.3, 0.4
            font_size: min(self.height * 0.14, dp(20))
        Label:
            id: sgant_elevation
            pos_hint: {"center_x": 0.65, "center_y": 0.2}
            text: ''
            markup: True
            color: root.signalcolor
            size_hint: 0.15, 0.4
            font_size: min(self.height * 0.10, dp(16))
        Label:
            id: sgant_transmit
            pos_hint: {"center_x": 0.75, "center_y": 0.2}
            text: ''
            markup: True
            color: root.signalcolor
            size_hint: 0.15, 0.4
            font_size: min(self.height * 0.10, dp(16))
        Image:
            id: sgant_dish
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/SGANTantenna.png"
            color: 1,1,1,1
            size_hint: 0.4,0.4
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.5, "center_y": 0.35}
            angle: 0
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0,0,1
                    origin: self.center
            canvas.after:
                PopMatrix
        Image:
            id: radio_up
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/Radio.zip"
            anim_delay: 0.03
            anim_loop: 0
            color: 1,1,1,1
            size_hint: 2,0.4
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            angle: sgant_dish.angle
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0,0,1
                    origin: sgant_dish.center
            canvas.after:
                PopMatrix
        Image:
            id: sgant_base
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/SGANTbase.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            size_hint: 0.15,0.15
            fit_mode: "scale-down"
        Image:
            id: tdrs_east12
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/TDRS.png"
            color: 1,1,1,1
            size_hint: 0.15,0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            angle: 0
            angle2: 180
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0,0,-1
                    ##origin: sgant_dish.center
                    origin: 400,0
                Rotate:
                    angle: self.angle2
                    axis: 0,0,1
                    origin: self.center
            canvas.after:
                PopMatrix
        Image:
            id: tdrs_east6

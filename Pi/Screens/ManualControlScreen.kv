<ManualControlScreen>:
    name: 'manualcontrol'
    on_pre_enter: root.callback()
    FloatLayout:
        size_hint: 1,1
        Image:
            id: Control_background
            source: '/home/pi/Mimic/Pi/imgs/control/ControlBackground.png'
            fit_mode: "fill"
        Image:
            id: signal
            source: "/home/pi/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
            fit_mode: "scale-down"
        Button:
            size_hint: 0.1,0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: '/home/pi/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: app.root.current = 'main'
        Image:
            id: arduino
            source: "/home/pi/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            fit_mode: "scale-down"
        Label:
            id: arduino_count
            pos_hint: {"x": 0.12, "y": 0.0}
            text: ''
            markup: True
            color: 1,1,1
            font_size: self.height * 0.3
            size_hint_y: 0.5
        Widget:
        #---------------------------------------------------------------------------------------------------------------
        Button:
            id: Beta4B_Button
            size_hint: 0.08,0.3
            pos_hint: {"center_x": 0.6, "center_y": 0.7}
            text: "4B"
            font_size: dp(30)
            on_press: root.setActive("Beta4B")
            halign: "center"
        Button:
            id: Beta2B_Button
            size_hint: 0.08,0.3
            pos_hint: {"center_x": 0.6, "center_y": 0.3}
            text: "2B"
            font_size: dp(30)
            on_press: root.setActive("Beta2B")
            halign: "center"
        Button:
            id: PSARJ_Button
            size_hint: 0.2,0.1
            pos_hint: {"center_x": 0.55, "center_y": 0.5}
            text: "Port Truss"
            font_size: dp(30)
            on_press: root.setActive("PSARJ")
            halign: "center"
        Button:
            id: Beta2A_Button
            size_hint: 0.08,0.3
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            text: "2A"
            font_size: dp(30)
            on_press: root.setActive("Beta2A")
            halign: "center"
        Button:
            id: Beta4A_Button
            size_hint: 0.08,0.3
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            text: "4A"
            font_size: dp(30)
            on_press: root.setActive("Beta4A")
            halign: "center"
        Button:
            id: PTRRJ_Button
            size_hint: 0.1,0.3
            pos_hint: {"center_x": 0.4, "center_y": 0.5}
            text: "Port\nHRS"
            font_size: dp(25)
            on_press: root.setActive("PTRRJ")
            halign: "center"
        Button:
            id: STRRJ_Button
            size_hint: 0.1,0.3
            pos_hint: {"center_x": 0.3, "center_y": 0.5}
            text: "Stbd\nHRS"
            font_size: dp(25)
            on_press: root.setActive("STRRJ")
            halign: "center"
        Button:
            id: Beta3A_Button
            size_hint: 0.08,0.3
            pos_hint: {"center_x": 0.2, "center_y": 0.7}
            text: "3A"
            font_size: dp(30)
            on_press: root.setActive("Beta3A")
            halign: "center"
        Button:
            id: Beta1A_Button
            size_hint: 0.08,0.3
            pos_hint: {"center_x": 0.2, "center_y": 0.3}
            text: "1A"
            font_size: dp(30)
            on_press: root.setActive("Beta1A")
            halign: "center"
        Button:
            id: SSARJ_Button
            size_hint: 0.2,0.1
            pos_hint: {"center_x": 0.15, "center_y": 0.5}
            text: "Stbd Truss"
            font_size: dp(30)
            on_press: root.setActive("SSARJ")
            halign: "center"
        Button:
            id: Beta3B_Button
            size_hint: 0.08,0.3
            pos_hint: {"center_x": 0.1, "center_y": 0.3}
            text: "3B"
            font_size: dp(30)
            on_press: root.setActive("Beta3B")
            halign: "center"
        Button:
            id: Beta1B_Button
            size_hint: 0.08,0.3
            pos_hint: {"center_x": 0.1, "center_y": 0.7}
            text: "1B"
            font_size: dp(30)
            on_press: root.setActive("Beta1B")
            halign: "center"
        Button:
            id: set0
            size_hint: 0.1,0.07
            pos_hint: {"center_x": 0.8, "center_y": 0.75}
            text: 'Set 0'
            font_size: dp(20)
            on_release: root.send0()
        Button:
            id: set90
            size_hint: 0.1,0.07
            pos_hint: {"center_x": 0.9, "center_y": 0.75}
            text: 'Set 90'
            font_size: dp(20)
            on_release: root.send90()
        Button:
            size_hint: 0.2,0.07
            pos_hint: {"center_x": 0.85, "center_y": 0.62}
            text: 'Calibrate Zero'
            font_size: dp(20)
            on_press: root.zeroJoints()
        Button:
            size_hint: 0.1,0.07
            pos_hint: {"center_x": 0.9, "center_y": 0.49}
            text: '+5'
            font_size: dp(20)
            on_press: root.incrementActive(5)
        Button:
            size_hint: 0.1,0.07
            pos_hint: {"center_x": 0.8, "center_y": 0.49}
            text: '-5'
            font_size: dp(20)
            on_press: root.incrementActive(-5)
        Button:
            size_hint: 0.1,0.07
            pos_hint: {"center_x": 0.9, "center_y": 0.40}
            text: '+20'
            font_size: dp(20)
            on_press: root.incrementActive(20)
        Button:
            size_hint: 0.1,0.07
            pos_hint: {"center_x": 0.8, "center_y": 0.40}
            text: '-20'
            font_size: dp(20)
            on_press: root.incrementActive(-20)
        Button:
            size_hint: 0.1,0.07
            pos_hint: {"center_x": 0.9, "center_y": 0.31}
            text: '+90'
            font_size: dp(20)
            on_press: root.incrementActive(90)
        Button:
            size_hint: 0.1,0.07
            pos_hint: {"center_x": 0.8, "center_y": 0.31}
            text: '-90'
            font_size: dp(20)
            on_press: root.incrementActive(-90)


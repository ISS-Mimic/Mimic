#:import dp kivy.metrics.dp

<CT_UHF_Screen>:
    name: 'ct_uhf'
    FloatLayout:
        Image:
            id: UHF_Background
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/UHFbackground.png"
            fit_mode: "fill"
        Image:
            id: UHF
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/UHF.png"
            size_hint_y: 0.7
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.45, "center_y": 0.5}
        Label:
            id: UHF1pwr_label
            pos_hint: {"center_x": 0.7, "center_y": 0.59}
            text: 'UHF 1 Power:'
            markup: True
            color: 1,1,1
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(24))
        Label:
            id: UHF1pwr
            pos_hint: {"center_x": 0.9, "center_y": 0.59}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(24))
        Label:
            id: UHF2pwr_label
            pos_hint: {"center_x": 0.7, "center_y": 0.53}
            text: 'UHF 2 Power:'
            markup: True
            color: 1,1,1
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(24))
        Label:
            id: UHF2pwr
            pos_hint: {"center_x": 0.9, "center_y": 0.53}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(24))
        Label:
            id: UHFframeSync_label
            pos_hint: {"center_x": 0.7, "center_y": 0.47}
            text: 'UHF Frame Sync:'
            markup: True
            color: 1,1,1
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(24))
        Label:
            id: UHFframeSync
            pos_hint: {"center_x": 0.9, "center_y": 0.47}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.1, dp(24))
        Button:
            size_hint: 0.1,0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: app.root.current = 'ct'
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            fit_mode: "scale-down"
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1,1,1
            font_size: min(self.height * 0.3, dp(24))
            size_hint_y: 0.5

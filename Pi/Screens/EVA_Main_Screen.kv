<EVA_Main_Screen>:
    name: 'eva_main'
    FloatLayout:
        Image:
            id: EVA_background
            source: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/GenericEVAbase.png'
            fit_mode: "fill"
        Button:
            id: US_EVA_Button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.31, "center_y": 0.465}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/GenericEVAusButton.png'
            on_release: app.root.current = 'us_eva'
        Button:
            id: RS_EVA_Button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.31, "center_y": 0.23}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/GenericEVArsButton.png'
            on_release: app.root.current = 'rs_eva'
        Button:
            id: EVA_EMU_Button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.91, "center_y": 0.23}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/EMUunlit.png'
            on_release: app.root.current = 'eva_emu'
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.05
            anim_loop: 0
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
            fit_mode: "scale-down"
        Button:
            size_hint: 0.1,0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: app.root.current = 'mimic'
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            fit_mode: "scale-down"
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1,1,1
            font_size: self.height * 0.3
            size_hint_y: 0.5

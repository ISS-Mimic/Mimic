#:import dp kivy.metrics.dp

<SSRMS_Screen>:
    name: 'ssrms'
    FloatLayout:
        Image:
            id: SSRMS_Background
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/robo/SSRMSbackground.png"
            fit_mode: "fill"
        Label:
            id: OperatingBase
            pos_hint: {"center_x": 0.3, "center_y": 0.77}
            text: '0'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Label:
            id: BaseLocation
            pos_hint: {"center_x": 0.3, "center_y": 0.73}
            text: '0'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Label:
            id: SACSopBase
            pos_hint: {"center_x": 0.3, "center_y": 0.68}
            text: '0'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Label:
            id: TipLEEstatus
            pos_hint: {"center_x": 0.23, "center_y": 0.585}
            text: '0'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Label:
            id: SSRMS_LEE_Stop_Condition
            pos_hint: {"center_x": 0.23, "center_y": 0.495}
            text: '-'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Label:
            id: SSRMS_LEE_Run_Speed
            pos_hint: {"center_x": 0.23, "center_y": 0.445}
            text: '-'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Label:
            id: SSRMS_LEE_Hot
            pos_hint: {"center_x": 0.23, "center_y": 0.395}
            text: '-'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Label:
            id: ShoulderRoll
            pos_hint: {"center_x": 0.85, "center_y": 0.88}
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Label:
            id: ShoulderYaw
            pos_hint: {"center_x": 0.85, "center_y": 0.84}
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Label:
            id: ShoulderPitch
            pos_hint: {"center_x": 0.85, "center_y": 0.8}
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Label:
            id: ElbowPitch
            pos_hint: {"center_x": 0.85, "center_y": 0.75}
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Label:
            id: WristPitch
            pos_hint: {"center_x": 0.85, "center_y": 0.71}
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Label:
            id: WristYaw
            pos_hint: {"center_x": 0.85, "center_y": 0.67}
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Label:
            id: WristRoll
            pos_hint: {"center_x": 0.85, "center_y": 0.63}
            markup: True
            color: root.signalcolor
            size_hint_y: 0.4
            font_size: min(self.height * 0.10, dp(30))
        Button:
            size_hint: 0.1, 0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            background_down: self.background_normal.replace('BackButton.png', 'BackButton_Down.png') if self.background_normal else ''
            on_release: app.root.current = 'robo'
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1, 1, 1, 1
            font_size: min(self.height * 0.3, dp(40))
            size_hint_y: 0.5

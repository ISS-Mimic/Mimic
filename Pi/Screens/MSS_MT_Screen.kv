#:import dp kivy.metrics.dp

<MTSpeedometer@Widget>:
    # Dynamic gauge for MT speed (cm/s)
    speed_cms: 0.0
    min_speed: 0.0
    max_speed: 5.5  # ~2.17 in/s, headroom above 2 in/s (5.08 cm/s)
    # Horizontal semicircle: 0=left (180°) → max=right (360°)
    start_angle: 180.0
    end_angle: 360.0
    canvas:
        Color:
            rgba: 1, 1, 1, 0.4
        # Arc background
        Line:
            ellipse: (root.center_x - root.width * 0.45, root.center_y - root.height * 0.45, root.width * 0.9, root.height * 0.9, -90, 90)
            width: dp(2)
        # Needle
        Color:
            rgba: 1, 0.2, 0.4, 1
        PushMatrix
        Rotate:
            angle: root.start_angle + (((min(max(root.speed_cms, root.min_speed), root.max_speed) - root.min_speed) / (root.max_speed - root.min_speed) if (root.max_speed - root.min_speed) != 0 else 0) * (root.end_angle - root.start_angle))
            origin: root.center_x, root.center_y
        Line:
            points: [root.center_x, root.center_y, root.center_x + root.width * 0.4, root.center_y]
            width: dp(2)
        PopMatrix
        # Center cap
        Color:
            rgba: 1, 1, 1, 1
        Line:
            circle: (root.center_x, root.center_y, dp(3))


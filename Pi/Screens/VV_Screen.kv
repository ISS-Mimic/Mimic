#:import dp kivy.metrics.dp

<VV_Screen>:
    name: 'vv'
    FloatLayout:
        # ───────────────────────── Background ──────────────────────────────
        Image:
            id: VV_Background
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/VVbackground.png"
            fit_mode: "fill"
        
        # ───────────────────────── Port Icons ─────────────────────────────
        Image:
            id: n1n_cygnus
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/N1NcygnusVV.png"
            opacity: 0.0
        Image:
            id: n2n_cygnus
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/N1NcygnusVV.png"
            opacity: 0.0
        Image:
            id: n2f_dragon
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/N2FdragonVV.png"
            opacity: 0.0
        Image:
            id: n2z_dragon
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/N2ZdragonVV.png"
            opacity: 0.0
        Image:
            id: n2f_starliner
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/N2FcstVV.png"
            opacity: 0.0
        Image:
            id: n2z_starliner
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/N2ZcstVV.png"
            opacity: 0.0
        Image:
            id: sma_soyuz
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/SMAsoyuzVV.png"
            opacity: 0.0
        Image:
            id: sma_progress
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/SMAprogressVV.png"
            opacity: 0.0
        Image:
            id: mrm2_soyuz
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/MRM2soyuzVV.png"
            opacity: 0.0
        Image:
            id: mrm2_progress
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/MRM2progressVV.png"
            opacity: 0.0
        Image:
            id: mrm1_soyuz
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/MRM1soyuzVV.png"
            opacity: 0.0
        Image:
            id: mrm1_progress
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/MRM1progressVV.png"
            opacity: 0.0
        Image:
            id: rsn_soyuz
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/RSNsoyuzVV.png"
            opacity: 0.0
        Image:
            id: rsn_progress
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/vv/RSNprogressVV.png"
            opacity: 0.0
        
        # ───────────────────────── Labels ─────────────────────────────────
        Label:
            id: sma_label
            pos_hint: {"center_x": 0.43, "center_y": 0.59}
            text: ''
            font_size: min(self.height * 0.2, dp(14))
            text_size: 200, None
            halign: 'left'
            bold: True
            markup: True
            color: 1, 0, 0, 1
        Label:
            id: mrm2_label
            pos_hint: {"center_x": 0.63, "center_y": 0.85}
            text: ''
            font_size: min(self.height * 0.2, dp(14))
            text_size: 200, None
            halign: 'left'
            bold: True
            markup: True
            color: 1, 0, 0, 1
        Label:
            id: rsn_label
            pos_hint: {"center_x": 0.63, "center_y": 0.25}
            text: ''
            font_size: min(self.height * 0.2, dp(14))
            text_size: 200, None
            halign: 'left'
            bold: True
            markup: True
            color: 1, 0, 0, 1
        Label:
            id: mrm1_label
            pos_hint: {"center_x": 0.70, "center_y": 0.35}
            text: ''
            font_size: min(self.height * 0.2, dp(14))
            text_size: 200, None
            halign: 'left'
            bold: True
            markup: True
            color: 1, 0, 0, 1
        Label:
            id: n1n_label
            pos_hint: {"center_x": 0.79, "center_y": 0.45}
            text: ''
            font_size: min(self.height * 0.2, dp(14))
            text_size: 200, None
            halign: 'left'
            bold: True
            markup: True
            color: 0, 0, 1, 1
        Label:
            id: n2n_label
            pos_hint: {"center_x": 0.97, "center_y": 0.4}
            text: ''
            font_size: min(self.height * 0.2, dp(14))
            text_size: 200, None
            halign: 'left'
            bold: True
            markup: True
            color: 0, 0, 1, 1
        Label:
            id: n2f_label
            pos_hint: {"center_x": 0.99, "center_y": 0.55}
            text: ''
            font_size: min(self.height * 0.2, dp(14))
            text_size: 150, None
            halign: 'left'
            bold: True
            markup: True
            color: 0, 0, 1, 1
        Label:
            id: n2z_label
            pos_hint: {"center_x": 0.90, "center_y": 0.92}
            text: ''
            font_size: min(self.height * 0.2, dp(14))
            text_size: 150, None
            halign: 'left'
            bold: True
            markup: True
            color: 0, 0, 1, 1
        
        # ───────────────────────── Buttons ────────────────────────────────
        Button:
            size_hint: 0.3, 0.11
            text: "NASA VV Image"
            font_size: min(dp(16), self.parent.width * 0.015)
            pos_hint: {"center_x": 0.85, "center_y": 0.2}
            background_down: self.background_normal
            on_release: app.root.current = 'vv_image'

       # ---------- STATUS DISPLAY (Bottom Rectangle) ----------
        Label:
            id: status_label
            text: ''
            size_hint: 1, 0.07
            background_color: 0, 0, 0, 0.8  # Semi-transparent black
            color: 0, 1, 0, 1  # Green text
            font_size: self.height * 0.6  # Scale font to label height
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            pos_hint: {"center_x": 0.57, "center_y": 0.07}
        
        # ---------- BOTTOM TOOLBAR ----------
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/signalred.zip"
            size_hint_y: 0.112
            anim_delay: 0.05
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: -1
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
        
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1, 1, 1, 1
            font_size: self.height * 1
            size_hint: 0.06, 0.08
        
        # ─────────────────────── Navigation ────────────────────────────────

        Button:
            size_hint: 0.1, 0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.07}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            background_down: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            border: 0,0,0,0    # avoid 9-slice margins
            on_release: app.root.current = 'mimic'
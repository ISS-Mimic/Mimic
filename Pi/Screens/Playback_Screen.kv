<ImageButton>:
    background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/playback/InfoIcon.png'
    fit_mode: "scale-down"

<Playback_Screen>:
    name: 'playback'
    
    FloatLayout:
        # Background
        Image:
            source: f'{root.mimic_directory}/Mimic/Pi/imgs/playback/SimulatedOrbitBackground.png'
            fit_mode: "fill"
        
        # Title
        Label:
            text: 'ISS Telemetry Playback'
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            font_size: dp(32)
            bold: True
            color: 1, 1, 1, 1
        
        # File Selection
        Label:
            text: 'Select Data File:'
            pos_hint: {"center_x": 0.25, "center_y": 0.8}
            font_size: dp(18)
            color: 1, 1, 1, 1
        
        Spinner:
            id: file_dropdown
            size_hint: 0.4, 0.08
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            text: 'Choose file...'
            values: ['HTV Demo', 'OFT-2 Demo', 'Standard Demo']
            on_text: root.on_file_selected(self.text)
        
        # Playback Speed
        Label:
            text: 'Playback Speed:'
            pos_hint: {"center_x": 0.25, "center_y": 0.7}
            font_size: dp(18)
            color: 1, 1, 1, 1
        
        BoxLayout:
            size_hint: 0.4, 0.08
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            spacing: dp(10)
            
            Button:
                text: '0.5x'
                on_release: root.set_playback_speed(0.5)
                background_color: 0.3, 0.3, 0.3, 1
            
            Button:
                text: '1x'
                on_release: root.set_playback_speed(1.0)
                background_color: 0.2, 0.6, 0.2, 1
            
            Button:
                text: '2x'
                on_release: root.set_playback_speed(2.0)
                background_color: 0.3, 0.3, 0.3, 1
            
            Button:
                text: '5x'
                on_release: root.set_playback_speed(5.0)
                background_color: 0.3, 0.3, 0.3, 1
        
        # Current File Display
        Label:
            text: f'File: {root.current_file if root.current_file else "None selected"}'
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            font_size: dp(16)
            color: 0.8, 0.8, 0.8, 1
        
        # Playback Controls
        BoxLayout:
            size_hint: 0.4, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            spacing: dp(20)
            
            Button:
                text: 'Start' if not root.is_playing else 'Playing...'
                disabled: not root.current_file or not root.arduino_connected
                on_release: root.start_playback()
                background_color: 0.2, 0.6, 0.2, 1
                size_hint_x: 0.5
            
            Button:
                text: 'Stop'
                disabled: not root.is_playing
                on_release: root.stop_playback()
                background_color: 0.8, 0.2, 0.2, 1
                size_hint_x: 0.5
        
        # Status Display
        Label:
            text: f'Status: {"Playing" if root.is_playing else "Stopped"}'
            pos_hint: {"center_x": 0.5, "center_y": 0.35}
            font_size: dp(18)
            color: 0, 1, 0, 1 if root.is_playing else 1, 1, 1, 1
        
        # Arduino Connection Status
        Label:
            text: f'Arduino: {"Connected" if root.arduino_connected else "Disconnected"}'
            pos_hint: {"center_x": 0.5, "center_y": 0.25}
            font_size: dp(16)
            color: 0, 1, 0, 1 if root.arduino_connected else 1, 0, 0, 1
        
        # Back Button
        Button:
            size_hint: 0.1, 0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: root.manager.current = 'main'
        
        # System Status Icons
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
            fit_mode: "scale-down"
        
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            fit_mode: "scale-down"
        
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1, 1, 1, 1
            font_size: self.height * 0.3
            size_hint_y: 0.5

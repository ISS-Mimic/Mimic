#:import win kivy.core.window
<ISS_Screen>:
    name: 'iss'
    FloatLayout:
        Label:
            pos_hint: {"center_x": 0.15, "center_y": 0.8}
            text: 'ISS Info'
            markup: True
            color: 1,0,1
            font_size: 30
        Image:
            id: ISS_background
            source: "/home/pi/Mimic/Pi/imgs/iss/ISSbackground.png"
            allow_stretch: False
        Image:
            id: modulestack
            source: "/home/pi/Mimic/Pi/imgs/iss/LEDstack2.png"
            size_hint: 1,1
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            keep_ratio: True
            angle: 0
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0,0,1
                    origin: self.center
            canvas.after:
                PopMatrix
        ToggleButton:
            id: SM_button
            size_hint: 0.25,0.2
            pos_hint: {"center_x": 0.1, "center_y": 0.55}
            text: 'SM'
            group: "modules"
            opacity: 0.0
            font_size: 16
            on_press: modulestack.source = "/home/pi/Mimic/Pi/imgs/iss/LEDstack2_SM.png"
            on_release: root.selectModule("SM")

<ISS_Screen>:
    name: 'iss'
    FloatLayout:
        Label:
            pos_hint: {"center_x": 0.15, "center_y": 0.8}
            text: 'ISS Info'
            markup: True
            color: 1,0,1
            size_hint_y: 0.4
            font_size: self.height * 0.2
        Image:
            id: ISS_background
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/iss/ISSbackground.png"
            fit_mode: "fill"
        Image:
            id: modulestack
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/iss/LEDstack2.png"
            size_hint: 1,1
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            fit_mode: "scale-down"
            angle: 0
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0,0,1
                    origin: self.center
            canvas.after:
                PopMatrix
        ToggleButton:
            id: SM_button
            size_hint: 0.25,0.2
            pos_hint: {"center_x": 0.1, "center_y": 0.55}
            group: "modules"
            opacity: 0.0
            on_press: modulestack.source = f"{root.mimic_directory}/Mimic/Pi/imgs/iss/LEDstack2_SM.png"
            on_release: root.selectModule("SM")
        Label:
            pos_hint: {"center_x": 0.1, "center_y": 0.5}
            text: 'SM'
            markup: True
            color: 0,0,0
            size_hint_y: 0.4
            font_size: self.height * 0.08
        ToggleButton:
            id: FGB_button
            size_hint: 0.25,0.2
            pos_hint: {"center_x": 0.35, "center_y": 0.55}

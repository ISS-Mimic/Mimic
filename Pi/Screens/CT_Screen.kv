#:import dp kivy.metrics.dp

<CT_Screen>:
    name: 'ct'
    FloatLayout:
        Image:
            id: CT_Antena_Background
            source: f'{root.mimic_directory}/Mimic/Pi/imgs/ct/AntennasBase.png'
            fit_mode: "fill"
        Image:
            id: ISS_CT
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/CT_ISS3.png"
            size_hint_y: 0.95
            fit_mode: "contain"
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
        Button:
            id: SGANT1
            size_hint: 0.1,0.2
            opacity: 0.1
            pos_hint: {"center_x": 0.57, "center_y": 0.7}
            on_release: app.root.current = 'ct_sgant'
        Button:
            id: SGANT2
            size_hint: 0.1,0.2
            opacity: 0.1
            pos_hint: {"center_x": 0.43, "center_y": 0.7}
            on_release: app.root.current = 'ct_sgant'
        Button:
            id: SASA1
            size_hint: 0.1,0.2
            opacity: 0.1
            pos_hint: {"center_x": 0.22, "center_y": 0.67}
            on_release: app.root.current = 'ct_sasa'
        Button:
            id: SASA2
            size_hint: 0.1,0.2
            opacity: 0.1
            pos_hint: {"center_x": 0.7, "center_y": 0.67}
            on_release: app.root.current = 'ct_sasa'
        Button:
            id: UHF1
            size_hint: 0.1,0.2
            opacity: 0.1
            pos_hint: {"center_x": 0.4, "center_y": 0.25}
            on_release: app.root.current = 'ct_uhf'
        Button:
            id: UHF2
            size_hint: 0.1,0.2
            opacity: 0.1
            pos_hint: {"center_x": 0.8, "center_y": 0.67}
            on_release: app.root.current = 'ct_uhf'
        Image:
            id: uhf1_radio
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/RadioSphere.zip"
            anim_delay: 0.12
            anim_loop: 0
            color: 1,1,1,1
            size_hint_y: 0.2
            fit_mode: "contain"
            pos_hint: {"center_x": 0.37, "center_y": 0.18}
        Image:
            id: uhf2_radio
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/RadioSphere.zip"
            anim_delay: 0.12
            anim_loop: 0
            color: 1,1,1,1
            size_hint_y: 0.2
            fit_mode: "contain"
            pos_hint: {"center_x": 0.805, "center_y": 0.69}
        Image:
            id: sasa1_radio
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/Radio.zip"
            anim_delay: 0.02
            anim_loop: 0
            color: 1,1,1,1
            size_hint_y: 0.2
            fit_mode: "contain"
            pos_hint: {"center_x": 0.245, "center_y": 0.8}
        Image:
            id: sasa2_radio
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/Radio.zip"
            anim_delay: 0.02
            anim_loop: 0
            color: 1,1,1,1
            size_hint_y: 0.2
            fit_mode: "contain"
            pos_hint: {"center_x": 0.71, "center_y": 0.8}
        Image:
            id: sgant1_radio
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/Radio.zip"
            anim_delay: 0.02
            anim_loop: 0
            color: 1,1,1,1
            size_hint_y: 0.2
            fit_mode: "contain"
            pos_hint: {"center_x": 0.44, "center_y": 0.83}
        Image:
            id: sgant2_radio
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/ct/Radio.zip"
            anim_delay: 0.02
            anim_loop: 0
            color: 1,1,1,1
            size_hint_y: 0.2
            fit_mode: "contain"
            pos_hint: {"center_x": 0.58, "center_y": 0.83}
        Button:
            size_hint: 0.1,0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: app.root.current = 'mimic'
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            fit_mode: "scale-down"
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1,1,1
            size_hint: 0.1, 0.5
            font_size: min(self.height * 0.3, dp(24))
